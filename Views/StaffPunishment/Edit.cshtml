@model AddMemberSystem.Models.TB_StaffPunishment

@{
    ViewData["Title"] = "Edit";
}

<h2>စီမံရေးရာဌာန ၀န်ထမ်း ပြစ်မှု ပြစ်ဒဏ် မှတ်တမ်း ပြန်လည်ပြုပြင်ခြင်း</h2>
<hr />

<form asp-action="Edit" method="post">
    <div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="StaffPunishmentPkid" />
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="StaffId" class="control-label">
                ဝန်ထမ်းအမှတ်
            </label>
            <input asp-for="StaffId"
                   class="form-control"
                   value="@ViewBag.StaffId"
                   readonly />
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label class="control-label">၀န်ထမ်း အမည်</label>
            <input class="form-control" value="@ViewBag.StaffName" readonly />
        </div>
         <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label class="control-label">ဌာန  </label>
            <input class="form-control" value="@ViewBag.SelectedDepartment" readonly />
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label class="control-label">ရာထူး </label>
            <input class="form-control" value="@ViewBag.SelectedPosition" readonly />
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="CreatedDate" class="control-label">
                ယနေ့ ရက်စွဲ
            </label>
            <input asp-for="CreatedDate" class="form-control" type="date" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
      
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="Punishment" class="control-label">
                ပြစ်ဒဏ်ဖြစ်သည့် အ‌ကြောင်းအရာ
            </label>
            <input asp-for="Punishment" class="form-control" />
            <span asp-validation-for="Punishment" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="PunishmentDate" class="control-label">
                ပြစ်ဒဏ်ဖြစ်သည့် ရက်စွဲ
            </label>
            <input asp-for="PunishmentDate" class="form-control" type="date" />
            <span asp-validation-for="PunishmentDate" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="PunishmentTypeId" class="control-label">
                ပြစ်ဒဏ်ချမှတ်မှု
            </label>
            <select asp-for="PunishmentTypeId" class="form-control" asp-items="ViewBag.PunishmentTypeId"></select>
            <span asp-validation-for="PunishmentTypeId" class="text-danger"></span>
        </div>     
        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <input type="submit" value="ပြုပြင်မည်" class="btn btn-primary col-md-2" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

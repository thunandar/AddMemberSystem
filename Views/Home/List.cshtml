@inject IConfiguration Configuration
@model IEnumerable<AddMemberSystem.Models.TB_Staff>

@{
    ViewData["Title"] = "ိ်ျူျိ်ူျ‌ေိ်ြStaff Lists";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<link rel="stylesheet" href="~/Content/css/box_StaffID.css" asp-append-version="true">


<div class="row" style="display: flex; align-items: center;">
    <div class="col-md-10" style="margin-top: -10px;">
        <h1 style="font-size: 32px;">Staff Lists</h1>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" onclick="showForm()">+ Calculate Salary </button>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary"><a asp-action="Create" style="color: #fff;">+ Create New</a></button>
    </div>
</div>

<div id="overlay"></div>
<form id="staffForm" method="get" action="@Url.Action("StaffBenefitCalculation", "Home")">
    <label for="staffID">သင့်ရဲ့ ၀န်ထမ်းအမှတ် ကို ရိုက်ထည့်ပေးပါ။</label>
    <input type="text" id="staffID" name="staffID" required>

     <label for="month">လကို ရွေးချယ်ပါ။</label>
    <select id="month" name="month" required>
        <option value="1">ဇန်နဝါရီ</option>
        <option value="2">ဖေဖော်ဝါရီ</option>
        <option value="3">မတ်</option>
        <option value="4">ဧပြီ</option>
        <option value="5">မေ</option>
        <option value="6">ဇွန်</option>
        <option value="7">ဇူလိုင်</option>
        <option value="8">ဩဂုတ်</option>
        <option value="9">စက်တင်ဘာ</option>
        <option value="10">အောက်တိုဘာ</option>
        <option value="11">နိုဝင်ဘာ</option>
        <option value="12">ဒီဇင်ဘာ</option>
    </select>

    <button type="submit">တင်သွင်းမည်</button>
</form>

<div class="row" style="margin-left: 0px; margin-top: 10px; margin-bottom: 10px;">
    <form method="get" class="row g-3" id="listView">
        <div class="col-md-3">
            <select id="SearchCriteria" name="SearchCriteria" class="form-control" asp-items="ViewBag.SearchCriteriaItems">
               <option value="">-----Choose to search-----</option>
                @if (string.IsNullOrEmpty(ViewBag.SearchTerm))
                {

                }

            </select>
        </div>

        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-search"></i>
                </span>
                <input type="text" id="SearchTerm" name="SearchTerm" class="form-control" placeholder="Enter your search" value="@ViewBag.SearchTerm" />
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" id="btnSearchStaff" class="btn btn-primary search-btn col-md-12">Search</button>
        </div>
        <div class="col-md-2">
            <button type="button" id="btnExportToExcel" class="btn btn-primary">Download Excel</button>
        </div>
    </form>
</div>




<div class="row">
    <div class="col-md-12">
        @if (ViewBag.ResultCount != null)
        {
            var resultCount = (int)ViewBag.ResultCount;
            <p class="text-info" style="font-weight: bold;">
                @resultCount @((resultCount == 1) ? "search result found." : "search results found.")
            </p>
        }
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>စဉ်</th>
            <th>အမှတ်စဉ်</th>
            <th>ဝန်ထမ်းအမှတ်</th>
            <th>ဝန်ထမ်းအမည်</th>
            <th>ဌာန</th>
            <th>ရာထူး</th>
            <th>ဖုန်းနံပါတ်</th>
            <th>ဝန်ထမ်းစတင်ရက်ဆွဲ</th>
            @*<th>ဝန်ထမ်း ဓာတ်ပုံ</th>*@
            <th>ပြုပြင်ရန်</th>
            <th>ကြည့်ရန်</th>
            <th>ဖျက်ရန်</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            var counter = (pager.CurrentPage - 1) * pager.PageSize + 1;
        }
@foreach (var item in Model) {
  
        <tr>
                <td>@(counter++)</td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>@Html.DisplayFor(modelItem => item.CurrentDepartment)</td>
                <td>@Html.DisplayFor(modelItem => item.CurrentPosition)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>            
            <td>
                    @item.StartedDate?.ToString("yyyy-MM-dd")
            </td>            
            @*td>
                <img decoding="async" src="@("~/StaffPhoto/"+@item.StaffPhoto)" asp-append-version="true" width="70px" height="50px" style="object-fit: cover;" />
            </td>*@

                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.StaffPkid">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.StaffPkid">
                        <i class="fa fa-info-circle"></i>
                    </a>
                </td>
                <td>
                    <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="@("#deleteModal" + @item.StaffPkid)">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
                <!-- Delete Modal Box -->
                <div class="modal fade" id="@("deleteModal" + @item.StaffPkid)" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h3 class="modal-title" id="myModalLabel">Confirmation</h3>
                            </div>
                            <div class="modal-body">
                                <h4>Are you sure you want to delete this staff?</h4>
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    <input type="hidden" name="Id" asp-for="@item.StaffPkid" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </tr>
         
}
    </tbody>
</table>

<script>
        const aUrl = "@Url.Action("SearchStaffs", "Home")";
        const bUrl = "@Url.Action("ExcelExportSearchResult", "Home")";
        const cUrl = "@Url.Action("ExcelAllStaffExport", "Home")";
        $("#btnSearchStaff").click(function (event) {            
            event.preventDefault();
            $("#listView").attr("action", aUrl);
            $("#listView").submit();
        });

        $("#btnExportToExcel").click(function (event) {
            event.preventDefault();
            
            var searchTerm = $("#SearchTerm").val();

            if (searchTerm && searchTerm.trim() !== "") {

                $("#listView").attr("action", bUrl);
            } else {

                $("#listView").attr("action", cUrl);
            }

            $("#listView").submit();
        });
</script>

<partial name="_pager" model="@pager" />

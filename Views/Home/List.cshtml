@model IEnumerable<AddMemberSystem.Models.TB_Staff>

@{
    ViewData["Title"] = "ိ်ျူျိ်ူျ‌ေိ်ြStaff Lists";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<link rel="stylesheet" href="~/css/general.css">

<div class="row header-container">
    <div class="col-md-8">
        <h1>၀န်ထမ်းများ</h1>
    </div>
    <div class="col-md-2 text-md-right text-center mt-2 mt-md-0">
        <button class="btn btn-primary" onclick="showForm()">+ Calculate Salary</button>
    </div>
    <div class="col-md-2 text-md-right text-center mt-2 mt-md-0">
        <a asp-action="Create" class="btn btn-primary w-100">+ Create New</a>
    </div>
</div>

@model IEnumerable<AddMemberSystem.Models.TB_Staff>

@{
    ViewData["Title"] = "SSb list";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    var errorMessage = TempData["ErrorMessage"] as string;

}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<h1 style="font-size: 32px;">SSB</h1>

<table class="table">
    <thead>
        <tr>
            <th>စဉ်</th>
            <th>၀န်ထမ်းအမှတ်</th>          
            <th>ErSSN</th>
            <th>EeSSN</th>
            <th>MInc</th>
            <th>SS1 EeRate</th>
            <th>SS1 ErRate</th>
            <th>SS1 EeConAmt</th>
            <th>SS1 ErConAmt</th>
            <th>SS2 EeRate</th>
            <th>SS2 ErRate</th>
            <th>SS2 EeConAmt</th>
            <th>SS2 ErConAmt</th>
            <th>TotalConAmt</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            var counter = (pager.CurrentPage - 1) * pager.PageSize + 1;
        }
    @foreach (var item in Model) {
        <tr>
                <td>@(counter++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffID)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.ErSSN)
                </td>
                <td class="text-success">
                    @Html.DisplayFor(modelItem => item.EeSSN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minc)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.SS1EeRate)
                </td>
                <td class="text-success">
                    @Html.DisplayFor(modelItem => item.SS1ErRate)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.SS1EeConAmt)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.SS1ErConAmt)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.SS2EeRate)
                </td>
                <td class="text-success">
                    @Html.DisplayFor(modelItem => item.SS2EeRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SS2EeConAmt)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.SS2ErConAmt)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.TotalConAmt)
                </td>           
        </tr>
}
    </tbody>
</table>


<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="SsbList" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Home" asp-action="SsbList" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                if (pge == 0)
                {
                    continue;
                }
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="SsbList" asp-route-pg="@pge">@pge</a>
                </li>
            }

            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="SsbList" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="SsbList" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
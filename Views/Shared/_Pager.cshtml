@model AddMemberSystem.Models.Pager

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="SearchStaffs" asp-route-searchCriteria="@ViewBag.searchCriteria" asp-route-searchTerm="@ViewBag.searchTerm" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Home" asp-action="SearchStaffs" asp-route-searchCriteria="@ViewBag.searchCriteria" asp-route-searchTerm="@ViewBag.searchTerm" asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                if (pge == 0)
                {
                    continue;
                }
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="SearchStaffs" asp-route-searchCriteria="@ViewBag.searchCriteria" asp-route-searchTerm="@ViewBag.searchTerm" asp-route-pg="@pge">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="SearchStaffs" asp-route-searchCriteria="@ViewBag.searchCriteria" asp-route-searchTerm="@ViewBag.searchTerm" asp-route-pg="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="SearchStaffs" asp-route-searchCriteria="@ViewBag.searchCriteria" asp-route-searchTerm="@ViewBag.searchTerm" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
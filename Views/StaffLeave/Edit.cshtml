@model AddMemberSystem.Models.TB_StaffLeave

@{
    ViewData["Title"] = "ခွင့်မှတ်တမ်းတင်ခြင်း";
}

<h2>ခွင့်မှတ်တမ်းတင်ပြုပြင်ခြင်း</h2>
<hr />

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="StaffLeavePkid" />

    <div class="form-group col-sm-12 col-md-12 col-lg-4">
        <label asp-for="StaffID" class="control-label">ဝန်ထမ်းအမှတ်</label>
            <input asp-for="StaffID" class="form-control" id="staffIDInput" readonly />
        <span asp-validation-for="StaffID" class="text-danger"></span>           
    </div>
    <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="StaffLeaveName" class="control-label">ဝန်ထမ်းအမည်</label>
            <input class="form-control" value="@ViewBag.StaffName" readonly />
        <span asp-validation-for="StaffLeaveName" class="text-danger"></span>
    </div>
 
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="LeaveAddress" class="control-label">ခွင့်ခံစားစဉ်နေရပ်လိပ်စာ</label>
            <input asp-for="LeaveAddress" class="form-control" />
            <span asp-validation-for="LeaveAddress" class="text-danger"></span>
        </div>
        <!-- Leave Type Dropdown -->
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="LeaveTypeId" class="control-label">ခွင့်အမျိုးအစား</label>
            <select asp-for="LeaveTypeId" class="form-control" id="leaveTypeSelect">
                @foreach (var leaveType in ViewBag.LeaveTypes)
                {
                    <option value="@leaveType.LeaveTypePkid"
                            data-leave-days="@leaveType.LeaveDays"
                            selected="@(leaveType.LeaveTypePkid == ViewBag.SelectedLeaveTypeId)">
                        @leaveType.LeaveTypeName
                    </option>
                }
            </select>
            <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
        </div>

        <!-- Leave Days Display -->
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label class="control-label">ခွင့်ရက်/ ယူထားသောရက်/ ကျန်ခွင့်</label>
            <div style="display: flex; gap: 10px;">
                <input id="totalLeaveDays" class="form-control" readonly style="width: 70px"
                       value="@ViewBag.InitialTotalDays" />
                <input id="takenLeaveDays" class="form-control" readonly style="width: 70px"
                       value="@ViewBag.InitialTakenDays" />
                <input id="remainingLeaveDays" class="form-control" readonly style="width: 70px"
                       value="@(ViewBag.InitialTotalDays - ViewBag.InitialTakenDays)" />
            </div>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="CreatedDate" class="control-label">ယနေ့ရက်စွဲ</label>
            <input asp-for="CreatedDate" class="form-control" type="date" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="LeaveDateFrom" class="control-label">ခွင့်ယူသည့်ရက်မှ</label>
            <input asp-for="LeaveDateFrom" class="form-control" type="date" />
            <span asp-validation-for="LeaveDateFrom" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="LeaveDateTo" class="control-label">ခွင့်ယူသည့်ရက်ထိ</label>
            <input asp-for="LeaveDateTo" class="form-control" type="date" />
            <span asp-validation-for="LeaveDateTo" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label for="LeaveDays" class="control-label">ရက်</label>
            <input asp-for="LeaveDays" class="form-control" type="number" readonly />
            <span asp-validation-for="LeaveDays" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label class="control-label">ဌာန  </label>
            <input class="form-control" value="@ViewBag.SelectedDepartment" readonly />
        </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label class="control-label">ရာထူး </label>
            <input class="form-control" value="@ViewBag.SelectedPosition" readonly />
        </div>
    <div class="form-group col-sm-12 col-md-12 col-lg-4">
            <label asp-for="DutyAssignedTo" class="control-label">ခွင့်ခံစားစဉ်တာ၀န်ယူမည့်သူ</label>
        <input asp-for="DutyAssignedTo" class="form-control" />
        <span asp-validation-for="DutyAssignedTo" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12 col-md-12 col-lg-4">
        <label asp-for="DutyAssignPosition" class="control-label">ရာထူး</label>
        <input asp-for="DutyAssignPosition" class="form-control" />
        <span asp-validation-for="DutyAssignPosition" class="text-danger"></span>
    </div>
        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <input type="submit" value="ပြုပြင်မည်" class="btn btn-primary col-md-2" />
    </div>
</div>
</form>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script>

        document.getElementById('leaveTypeSelect').addEventListener('change', updateLeaveDays);

        // Function to update total, taken, and remaining leave days
        function updateLeaveDays() {
            var leaveTypeSelect = document.getElementById('leaveTypeSelect');
            var selectedOption = leaveTypeSelect.options[leaveTypeSelect.selectedIndex];
            var totalDays = parseInt(selectedOption.getAttribute('data-leave-days'));
            var staffID = document.getElementById('staffIDInput').value;
            var leaveTypeId = selectedOption.value;

            fetch(`/StaffLeave/GetTakenLeaveDays?staffID=${staffID}&leaveTypeId=${leaveTypeId}`)
                .then(response => response.json())
                .then(data => {
                    // Update using element IDs
                    document.getElementById('totalLeaveDays').value = totalDays;
                    document.getElementById('takenLeaveDays').value = data.takenLeaveDays;
                    document.getElementById('remainingLeaveDays').value = totalDays - data.takenLeaveDays;
                })
                .catch(error => console.error('Error:', error));
        }

        // Initial update on page load
        updateLeaveDays();

        //Calculating Auto LeaveDays for StaffLeave
        document.getElementById('LeaveDateTo').addEventListener('change', calculateLeaveDays);
        document.getElementById('LeaveDateFrom').addEventListener('change', calculateLeaveDays);

        function calculateLeaveDays() {
            const fromDate = new Date(document.getElementById('LeaveDateFrom').value);
            const toDate = new Date(document.getElementById('LeaveDateTo').value);
            let leaveDays = 0;

            if (fromDate && toDate && toDate >= fromDate) {
                const timeDiff = toDate - fromDate;
                leaveDays = Math.floor(timeDiff / (1000 * 3600 * 24)) + 1;
            }

            const leaveDaysInput = document.getElementById('LeaveDays');
            leaveDaysInput.value = leaveDays;
            leaveDaysInput.dispatchEvent(new Event('change'));
        }

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

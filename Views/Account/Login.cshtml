@model AddMemberSystem.Models.TB_User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login | YRTC HR Management</title>
    <link rel="icon" href="~/Content/Logo/YRTCremovebg.png" type="image/png" sizes="16x16" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        body {
            background: linear-gradient(#c6e0f8, #e8e5e6);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }

        .login-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            max-width: 420px;
            width: 100%;
        }

        .login-header img {
            width: 70px;
            height: 70px;
        }

        .login-header h3 {
            font-weight: bold;
            margin-top: 10px;
        }

        .form-control {
            padding-left: 2.5rem;
        }

        .form-icon {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #777;
        }

        .btn-custom {
            background: linear-gradient(135deg, #007bff, #0056b3) !important;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: #003580;
            }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 12px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
        }

        .small-text {
            font-size: 0.9rem;
            color: #666;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="text-center login-header">
            <img src="~/Content/Logo/YRTCremovebg.png" alt="YRTC Logo" />
            <h3>YRTC HR Management</h3>
            <p class="text-muted">Login to your account</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- User ID -->
            <div class="mb-3 position-relative">
                <i class="bi bi-person-fill form-icon"></i>
                <input type="text" name="UserID" class="form-control" placeholder="User ID" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3 position-relative">
                <i class="bi bi-lock-fill form-icon"></i>
                <input type="password" name="Password" id="password-input" class="form-control" placeholder="Password" />
                <i class="bi bi-eye-fill toggle-password" id="toggle-password"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Stay signed in -->
            <div class="form-check mb-3">
                <input type="checkbox" name="StaySignedIn" class="form-check-input" id="StaySignedIn" value="true" />
                <label class="form-check-label" for="StaySignedIn">Stay signed in for a week</label>
            </div>

            <!-- Submit button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-custom text-white">Login</button>
            </div>
        </form>

        <p class="mt-3 text-center small-text">Enter your YRTC ID and Password.</p>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const passwordInput = document.getElementById("password-input");
        const togglePassword = document.getElementById("toggle-password");

        togglePassword.addEventListener("click", () => {
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                togglePassword.classList.remove("bi-eye-fill");
                togglePassword.classList.add("bi-eye-slash-fill");
            } else {
                passwordInput.type = "password";
                togglePassword.classList.remove("bi-eye-slash-fill");
                togglePassword.classList.add("bi-eye-fill");
            }
        });
    </script>
</body>
</html>
